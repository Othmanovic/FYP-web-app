<script>

 const accepted = document.getElementById("acc")
 const upcoming = document.getElementById("upc")

 accepted.addEventListener('click', ()=>{
   const accRow = document.getElementById('acceptedOrders')
   const upcRow = document.getElementById('upcomingOrders')
   accRow.hidden = false
   upcRow.hidden = true
 })
 
 upcoming.addEventListener('click', ()=>{
   const accRow = document.getElementById('acceptedOrders')
   const upcRow = document.getElementById('upcomingOrders')
   accRow.hidden = true
   upcRow.hidden = false
 })


    
  </script>
</body>

</html>