<body>

  <form action="/add" method="POST" enctype="multipart/form-data" style="display: block; margin-top:150px; margin-bottom:150px; margin-left: auto; margin-right: auto; width: 70%;">
    <div class="form-group">
      <label for="formGroupExampleInput">Product Name</label>
      <input required name="productName" type="text" class="form-control" id="formGroupExampleInput" placeholder="Product Name" value="{{product.productName}}" aria-required="true">
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Product Price</label>
      <input required name="productPrice" type="number" class="form-control" id="formGroupExampleInput2" placeholder="Product Price" value="{{product.productPrice}}" step=".01" aria-required="true">
    <input type="hidden" value="{{product._id}}">
    </div>

    <div class="form-group">
      <label for="exampleFormControlFile1">Product Photo</label>
      <input required required accept="image/*" name="productImage" type="file" class="form-control-file" id="exampleFormControlFile1" value="{{product.productImage}}" aria-required="true">
    </div>
    
    <button type="submit" class="btn btn-primary">Create</button>
  </form>




